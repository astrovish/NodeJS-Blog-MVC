<!DOCTYPE html>
<html>
    <%- include('header') %>
    <body>
        <div class="container">
            <h1><%= pageTitle %></h1>
            <p><a href="/blogs/create" class="btn btn-success">Create Blog</a></p>
            <% 
            if( blogs.length ) {
                blogs.forEach(blog => {
            %>
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title"><a href="/blogs/<%= blog.slug %>" class="card-link"><%= blog.title %></a></h5>
                        <p class="card-text"><%= blog.body %></p>
                        <a href="/blogs/<%= blog.slug %>" class="btn btn-primary">Read more</a>
                        <a href="/blogs/edit/<%= blog.id %>" class="btn btn-info">Edit</a>
                        <form action="/blogs/<%= blog.id %>?_method=DELETE" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
            <% 
                }) 
            } else {
            %>
                <p>No blog posted yet.</p>
            <%
            }
            %>

            <%- include('footer') %>
        </div>    
    </body>
</html>