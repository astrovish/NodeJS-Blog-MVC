<!DOCTYPE html>
<html>
    <%- include('header') %>
    <body>
        <div class="container">
            <h1><%= pageTitle %></h1>
            <div class="card">
                <div class="card-body">
                    <p class="card-text"><%= blog.body %></p>
                    <a href="/blogs" class="btn btn-info">All Blogs</a>
                    <form action="/blogs/<%= blog.id %>?_method=DELETE" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>

            <%- include('footer') %>
        </div>    
    </body>
</html>